{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
               "/Zc:wchar_t", // Treat WChar_t as built in type (VS19)
				"/Zc:forScope", // Force conformance in For Loop scope (VS19)
				"/Zc:inline", // Remove unreferenced code and data (VS19)
                "/Zi", // generate complete debugging info
                "/EHsc", // standard C++ error handling (default VS19)
                "/nologo", // suppress display of sign-on banner
				"/permissive-", // default for VS19
				"/W4", // Warning level (VS19)
				"/WX", // Treat warning as error (VS19 default /WX-)
				"/w44364", // enable signed/unsigned conversion warnigs are W4
				"/external:W3", // compile external standard libraries at W3
				"/sdl", // additional security development lifecyle recommended checks (VS19)
				"/Od", // optimisation disabled (VS19)
                "/std:c++20",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "${fileDirname}/../src/*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
